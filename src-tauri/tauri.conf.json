{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "Diff Notes",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Diff Notes",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "minWidth": 976,
        "minHeight": 480,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.lucaslrodri.diffnotes",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Productivity",
      "shortDescription": "A truly minimal annotation tool with integrated differentiation and merge functionality",
      "longDescription": "Diff Notes is a temporary annotation tool with integrated differentiation and merge functionality"
    }
  }
}